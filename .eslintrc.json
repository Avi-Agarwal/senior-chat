{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "comma-dangle": [1, "never"],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [0],
        "react/prop-types": ["off"],
        "padding-line-between-statements": [
            "error",
            { "blankLine": "always", "prev": "*", "next": "export" },
            { "blankLine": "never", "prev": "*", "next": "import" }
        ],
        "object-curly-spacing": ["error", "always"]
    }
}
